<div id="projects" class="my-4">
  <h1 class="figtree-bold mb-5" style="font-size: 7rem;">SELECTED <span class="shin bruno">WORKS</span> /</h1>
  <div class="row w-100 my-5">
    <div class="col-5"></div>
    <div class="col-7">
      <div class="row w-100">
        <div class="col-3 chakra gray fs-5">(PROJECTS)</div>
        <div class="col-7 chakra gray fs-5">Featured projects carefully crafted with passion to drive results and make an impact out of real outcomes.</div>
        <div class="col-2"></div>
      </div>
    </div>
  </div>
  <div class="row w-100 mx-0" id="scroll-container">
    <div class="col-5 px-0" id="number-container">
      <div class="number gray chakra lh-1">01.</div>
    </div>
    <div class="col-7 px-0">
      <% data.projects.each do |project| %>
        <div class="scroll-section mb-5">
          <div class="mockup" style="height:90%;">
            <%= image_tag project.image, alt: "project image", class: 'rounded-3 static-mockup' %>
            <%= image_tag project.gif, alt: "project gif", class: 'rounded-3 animated-mockup' %>
          </div>
          <div class="gray d-flex justify-content-between align-items-end" style="height:10%;">
            <div>
              <div>
                <p class="fs-6 chakra mb-0"><%= project.description %></p>
              </div>
              <div class="fs-1 figtree lh-1"><%= project.name.upcase %></div>
            </div>
            <div class="d-flex gap-2 chakra">
              <span class="badge rounded-pill fs-5 bg-outline-secondary py-2 px-4">DESIGN</span>
              <span class="badge rounded-pill fs-5 bg-outline-secondary py-2 px-4">DEVELOPMENT</span>
              <span class="badge rounded-pill fs-5 bg-second py-2 px-4">2024</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
